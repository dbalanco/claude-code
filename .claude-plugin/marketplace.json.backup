{
  "name": "perseon-ai-marketplace",
  "owner": {
    "name": "Darryn Balanco",
    "email": "darryn@optimus01.com",
    "url": "https://github.com/dbalanco"
  },
  "metadata": {
    "description": "Comprehensive plugin marketplace for Next.js 15 SaaS developers with React 19, Tailwind, shadcn/ui, Postgres, Drizzle ORM, AI SDK, BetterAuth, and Polar",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "documentation-tools",
      "source": "./plugins/documentation-tools",
      "description": "Automated documentation system that scans feature specifications, tracks implementation progress, and generates comprehensive app-specs.md documents with progress dashboards",
      "version": "1.0.0",
      "category": "productivity",
      "keywords": ["documentation", "specifications", "progress-tracking", "project-management", "markdown", "automation"]
    },
    {
      "name": "mcp-library",
      "source": "./plugins/mcp-library",
      "description": "Library of pre-configured MCP servers for Claude Code.",
      "version": "1.0.0",
      "category": "claude-code",
      "keywords": ["mcp"]
    },
    {
      "name": "apify",
      "source": "./plugins_mcp/apify",
      "description": "Apify MCP server provides access to a marketplace for web scraping and data extraction tools.",
      "version": "1.0.0",
      "category": "automation",
      "keywords": ["apify", "web-scraping", "automation", "data-extraction", "crawling", "actors"]
    },
    {
      "name": "chrome-devtools",
      "source": "./plugins_mcp/chome_devtools",
      "description": "Chrome DevTools lets your coding agent (such as Gemini, Claude, Cursor or Copilot) control and inspect a live Chrome browser.",
      "version": "1.0.0",
      "category": "testing",
      "keywords": ["chrome", "devtools", "browser", "automation", "debugging", "inspection"]
    },
    {
      "name": "context7",
      "source": "./plugins_mcp/context7",
      "description": "Upstash Context7 MCP server for up-to-date documentation lookup. Pull version-specific documentation and code examples directly from source repositories into your LLM context.",
      "version": "1.0.0",
      "category": "documentation",
      "keywords": ["documentation", "upstash", "context", "mcp", "code-examples", "repository-docs"]
    },
    {
      "name": "firecrawl",
      "source": "./plugins_mcp/firecrawl",
      "description": "Firecrawl MCP server for intelligent web scraping and crawling. Extract clean, LLM-ready data from websites with advanced crawling capabilities, JavaScript rendering, and content extraction.",
      "version": "1.0.0",
      "category": "automation",
      "keywords": ["firecrawl", "web-scraping", "crawling", "data-extraction", "javascript-rendering", "content-extraction"]
    },
    {
      "name": "shadcn",
      "source": "./plugins_mcp/shadcn",
      "description": "Beautifully designed components that you can customize, extend, and build on.",
      "version": "1.0.0",
      "category": "ui-components",
      "keywords": ["ui", "components", "design-system", "react", "tailwind", "shadcn"]
    },
    {
      "name": "playwright",
      "source": "./plugins_mcp/playwright",
      "description": "Browser automation and end-to-end testing MCP server by Microsoft. Enables Claude to interact with web pages, take screenshots, fill forms, click elements, and perform automated browser testing workflows.",
      "version": "1.0.0",
      "category": "testing",
      "keywords": ["testing", "automation", "browser", "e2e", "playwright", "microsoft"]
    },
    {
      "name": "supabase",
      "source": "./plugins_mcp/supabase",
      "description": "Supabase MCP integration for database operations, authentication, storage, and real-time subscriptions. Manage your Supabase projects, run SQL queries, and interact with your backend directly.",
      "version": "1.0.0",
      "category": "database",
      "keywords": ["database", "backend", "supabase", "authentication", "storage", "real-time"]
    },
    {
      "name": "prisma",
      "source": "./plugins_mcp/prisma",
      "description": "Prisma MCP allows you to manage your databases with natural language via MCP in Claude, Codex, Cursor, Warp, ChatGPT and other AI agents.",
      "version": "1.0.0",
      "category": "database",
      "keywords": ["prisma", "database", "orm", "natural-language", "database-management", "schema"]
    },
    {
      "name": "github",
      "source": "./plugins_mcp/github",
      "description": "Official GitHub MCP server for repository management. Create issues, manage pull requests, review code, search repositories, and interact with GitHub's full API directly from Claude Code.",
      "version": "1.0.0",
      "category": "integration",
      "keywords": ["github", "git", "version-control", "pull-requests", "issues", "code-review"]
    },
    {
      "name": "slack",
      "source": "./plugins_mcp/slack",
      "description": "Slack workspace integration. Search messages, access channels, read threads, and stay connected with your team's communications while coding. Find relevant discussions and context quickly.",
      "version": "1.0.0",
      "category": "communication",
      "keywords": ["slack", "messaging", "collaboration", "team", "communication", "workspace"]
    },
    {
      "name": "stripe",
      "source": "./plugins_mcp/stripe",
      "description": "Stripe development plugin for Claude",
      "version": "0.1.0",
      "category": "payments",
      "keywords": ["stripe", "payments", "webhooks", "api", "security"]
    },
    {
      "name": "vercel",
      "source": "./plugins_mcp/vercel",
      "description": "Official Vercel MCP server for deployment and project management. Search documentation, manage deployments, configure projects, and interact with the Vercel platform directly from Claude Code.",
      "version": "1.0.0",
      "category": "deployment",
      "keywords": ["vercel", "deployment", "hosting", "edge", "serverless", "projects", "documentation"]
    },
    {
      "name": "neon",
      "source": "./plugins_mcp/neon",
      "description": "Neon serverless Postgres MCP server. Manage databases, create branches, run queries, and interact with your Neon projects. Features instant provisioning, automatic scaling, and database branching for development workflows.",
      "version": "1.0.0",
      "category": "database",
      "keywords": ["neon", "postgres", "postgresql", "database", "serverless", "branching", "sql", "cloud-database"]
    }
  ]
}
